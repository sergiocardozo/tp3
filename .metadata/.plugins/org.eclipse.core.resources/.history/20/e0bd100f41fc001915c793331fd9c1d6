{
	Employee* pEmpleados;
	pEmpleados = employee_new();

	int auxId;
	char auxNombre[50];
	int auxSueldo;
	int auxHorasTrabajadas;
	int ret = -1;

	if(pArrayListEmployee != NULL)
	{
		auxId = generarId();
		printf("ingrese nombre del empleado ");
		fgets(auxNombre);

		ret = 0;
	}

	return ret;

}

